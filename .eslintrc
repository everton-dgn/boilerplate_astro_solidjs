{
  "env": {
    "browser": true,
    "es2022": true,
    "node": true,
    "astro/astro": true
  },
  "settings": {
    "playwright": {
      "additionalAssertFunctionNames": ["assertCustomCondition"]
    },
    "import/extensions": [".js", ".jsx", ".ts", ".tsx"],
    "import/parsers": {
      "@typescript-eslint/parser": [".ts", ".tsx"]
    },
    "import/resolver": {
      "typescript": {
        "project": "tsconfig.json"
      }
    }
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": "latest",
    "sourceType": "module",
    "extraFileExtensions": [".astro"]
  },
  "plugins": [
    "solid",
    "@typescript-eslint",
    "sonarjs",
    "promise",
    "jsx-a11y",
    "prettier",
    "import",
    "eslint-plugin-import-helpers"
  ],
  "extends": [
    "standard-with-typescript",
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:promise/recommended",
    "plugin:jsx-a11y/recommended",
    "plugin:sonarjs/recommended",
    "plugin:solid/recommended",
    "plugin:solid/typescript",
    "prettier",
    "plugin:prettier/recommended",
    "plugin:import/errors",
    "plugin:import/typescript",
    "plugin:import/warnings"
  ],
  "rules": {
    "import-helpers/order-imports": [
      "warn",
      {
        "newlinesBetween": "always",
        "groups": [
          ["/solid-js/"],
          "module",
          "/^(providers|components)/",
          ["/hooks/", "/helperFunctions/", "/testHelpers/"],
          ["/infra/", "/data/", "/validation/"],
          "/^assets/",
          ["/^theme$/", "/styles/", "/@types/"],
          ["parent", "sibling", "index"]
        ],
        "alphabetize": { "order": "asc", "ignoreCase": true }
      }
    ],
    "@typescript-eslint/no-confusing-void-expression": "off",
    "@typescript-eslint/unbound-method": "off",
    "import/no-unresolved": [2, { "commonjs": true, "amd": true }],
    "import/named": 2,
    "import/namespace": 2,
    "import/default": 2,
    "import/export": 2,
    "import/no-duplicates": "error",
    "@typescript-eslint/prefer-nullish-coalescing": "off",
    "@typescript-eslint/strict-boolean-expressions": "off",
    "@typescript-eslint/explicit-function-return-type": "off",
    "@typescript-eslint/consistent-type-definitions": "off",
    "@typescript-eslint/no-floating-promises": [
      "error",
      {
        "ignoreVoid": false
      }
    ],
    "object-shorthand": "warn",
    "@typescript-eslint/no-var-requires": "off",
    "@typescript-eslint/ban-ts-comment": "off",
    "no-console": "error",
    "@typescript-eslint/no-explicit-any": "off",
    "@typescript-eslint/no-unused-vars": "error",
    "jsx-a11y/anchor-is-valid": "off",
    "@typescript-eslint-in-jsx-scope": "off",
    "@typescript-eslint/no-non-null-assertion": "warn",
    "space-before-function-paren": "off",
    "eslint-disable-next-line": "off",
    "prettier/prettier": "error"
  },
  "overrides": [
    {
      "files": ["src/**/__tests__/*.test.{ts,tsx}"],
      "plugins": ["jest-dom", "testing-library", "jest"],
      "extends": [
        "plugin:jest-dom/recommended",
        "plugin:jest/style"
      ],
      "excludedFiles": ["**/*.spec.ts"],
      "rules": {
        "jest/no-disabled-tests": "off",
        "testing-library/render-result-naming-convention": "off",
        "jest/no-commented-out-tests": "off"
      }
    },
    {
      "files": ["src/tests/*.spec.ts"],
      "extends": ["plugin:playwright/recommended"],
      "rules": {
        "playwright/no-skipped-test": "off"
      }
    },
    {
      "files": ["*.astro"],
      "plugins": ["astro"],
      "extends": ["plugin:astro/recommended"],
      "processor": "astro/client-side-ts",
      "parser": "astro-eslint-parser",
      "parserOptions": {
        "parser": "@typescript-eslint/parser",
        "extraFileExtensions": [".astro"],
        "sourceType": "module"
      },
      "rules": {
        "astro/no-conflict-set-directives": "error",
        "astro/no-unused-define-vars-in-style": "error"
      }
    }
  ]
}
